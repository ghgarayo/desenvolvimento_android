<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".complexa.FolhaCadastroActivity"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FOLHA DE PAGAMENTO"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtNome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do funcionÃ¡io"
        android:inputType="textPersonName"
        android:layout_marginVertical="10dp" />

    <EditText
        android:id="@+id/edtHorasTrab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas trabalhadas"
        android:inputType="numberDecimal"
        android:layout_marginVertical="10dp" />

    <EditText
        android:id="@+id/edtValorHora2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor da hora"
        android:inputType="numberDecimal"
        android:layout_marginVertical="10dp" />

    <Button
        android:id="@+id/btnCadastrar2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Calcular"
        android:layout_marginVertical="10dp" />

</LinearLayout>